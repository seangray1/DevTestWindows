<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Account_Name_Max_Length</fullName>
    <active>true</active>
    <errorConditionFormula>LEN( Name )  &gt; 30 &amp;&amp; $Setup.rh2__PS_Settings__c.rh2__Run_Validation_Rule__c</errorConditionFormula>
    <errorDisplayField>Name</errorDisplayField>
    <errorMessage>Account Name cannot exceed 30 characters</errorMessage>
</ValidationRule>
