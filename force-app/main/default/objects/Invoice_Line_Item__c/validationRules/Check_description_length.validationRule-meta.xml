<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Check_description_length</fullName>
    <active>true</active>
    <errorConditionFormula>LEN(Description__c)  &gt; 255</errorConditionFormula>
    <errorDisplayField>Description__c</errorDisplayField>
    <errorMessage>Description field cannot contain more than 255 characters</errorMessage>
</ValidationRule>
