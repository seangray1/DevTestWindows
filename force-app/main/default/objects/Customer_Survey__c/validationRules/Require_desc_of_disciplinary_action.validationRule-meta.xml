<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Require_desc_of_disciplinary_action</fullName>
    <active>true</active>
    <errorConditionFormula>AND( Disciplinary_action_needed__c = TRUE, ISBLANK( Disciplinary_action_description__c ) )</errorConditionFormula>
    <errorDisplayField>Disciplinary_action_description__c</errorDisplayField>
    <errorMessage>You must enter a description for any needed disciplinary action.</errorMessage>
</ValidationRule>
