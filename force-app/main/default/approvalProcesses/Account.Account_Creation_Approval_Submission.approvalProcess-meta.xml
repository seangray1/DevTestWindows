<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>BillingAddress</field>
        <field>PersonMailingAddress</field>
        <field>Phone</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>arlene.uribe@atirestoration.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>frank.islas@atirestoration.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>mary.thomas@atirestoration.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>nicole.garces@atirestoration.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>vianey.rollaceli@atirestoration.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Account Creation Approval Process</label>
        <name>Account_Creation_Approval_Process</name>
    </approvalStep>
    <emailTemplate>Account_Email_Templates/Account_Creation_Approval_Submission</emailTemplate>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Account.IsPersonAccount</field>
            <operation>equals</operation>
            <value>False</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Account_Creation_Approval_Submission</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Account_Status_to_Active</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Account_Rejected</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Account_Status_to_Rejected</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Account_Status_to_Unapproved</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Account Creation Approval Submission</label>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
