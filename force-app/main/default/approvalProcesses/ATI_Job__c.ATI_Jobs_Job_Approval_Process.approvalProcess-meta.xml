<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>ATI_Administrative_Group</submitter>
        <type>group</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>Admin_Managers_Corporate</submitter>
        <type>role</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>Call_Center</submitter>
        <type>role</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>Job_Number__c</field>
        <field>Office2__c</field>
        <field>Division__c</field>
        <field>Project_Manager__c</field>
        <field>Account__c</field>
        <field>Contact__c</field>
        <field>Project_Site_Contact_Name__c</field>
        <field>Project_Site_Contact_Email__c</field>
        <field>Project_Site_Address__c</field>
        <field>Project_Site_City__c</field>
        <field>Project_Site_Zipcode__c</field>
        <field>Lead_Source__c</field>
        <field>Job_Class__c</field>
        <field>Description__c</field>
        <field>Cont_P_O_Client_Job__c</field>
        <field>Claim__c</field>
        <field>Submitted_for_Approval_By__c</field>
        <field>Date_Time_Submitted_for_Approval__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>arlene.uribe@atirestoration.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>lorie.moore@atirestoration.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>mary.thomas@atirestoration.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>melissa.delatorre@atirestoration.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>nicole.garces@atirestoration.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>selena.hency@atirestoration.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>vianey.rollaceli@atirestoration.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Step 1</label>
        <name>Step_1</name>
    </approvalStep>
    <emailTemplate>ATI_Job_Templates/ATI_Job_Job_Approval_Required</emailTemplate>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>1 AND 2 AND 3 AND 4 AND 5 AND 6</booleanFilter>
        <criteriaItems>
            <field>ATI_Job__c.RecordType</field>
            <operation>equals</operation>
            <value>New Job (Not Approved)</value>
        </criteriaItems>
        <criteriaItems>
            <field>ATI_Job__c.Office__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>ATI_Job__c.Division__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>ATI_Job__c.Project_Manager__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>ATI_Job__c.Account_Status__c</field>
            <operation>notEqual</operation>
            <value>Rejected,Unapproved</value>
        </criteriaItems>
        <criteriaItems>
            <field>User.Profile</field>
            <operation>notEqual</operation>
            <value>Restricted Process Execution</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Alert_Admin_Managers_and_Job_Creator_of_Job_Approval_via_email</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Change_Record_Type_to_Job_Approved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Job_Approval_Date_Time</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Job_Approved_By</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>New_PD_Job_Assignments</name>
            <type>Alert</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Alert_Admin_Managers_and_Job_Creator_of_Job_Rejection_via_email</name>
            <type>Alert</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Job_Submittal_Date_Time</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Job_Submitted_for_Approval_By</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>ATI Jobs/Job Approval Process</label>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
