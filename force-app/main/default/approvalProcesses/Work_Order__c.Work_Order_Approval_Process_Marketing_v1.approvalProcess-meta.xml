<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Opportunity_Name__c</field>
        <field>Office3__c</field>
        <field>Division__c</field>
        <field>Project_Manager__c</field>
        <field>Job_Address__c</field>
        <field>Requested_Start_Date_Time__c</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>Operations_Manager__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Step 1</label>
        <name>Step_1</name>
    </approvalStep>
    <emailTemplate>unfiled$public/WO_Approval_Required</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Work_Order__c.Requested_Start_Date_Time__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>Work_Order__c.RecordType</field>
            <operation>equals</operation>
            <value>Marketing Work Order</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>WO_Approved_By</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>WO_Date_Time_Approved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Work_Order_Approved</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Work_Order_Assignment_Email_Corp</name>
            <type>Alert</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Work_Order_Rejection</name>
            <type>Alert</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>WO_Submittal_Date_Time</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>WO_Submitted_for_Approval_By</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Work Order Approval Process_Marketing_v1</label>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
