<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>ATI_Administrative_Group</submitter>
        <type>group</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>Admin_Managers_Corporate</submitter>
        <type>role</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Job_Number__c</field>
        <field>Name</field>
        <field>Office2__c</field>
        <field>Division__c</field>
        <field>Project_Manager__c</field>
        <field>Account</field>
        <field>Contact__c</field>
        <field>Project_Site_Contact_Name__c</field>
        <field>Project_Site_Address__c</field>
        <field>Project_Site_City__c</field>
        <field>Project_Site_State__c</field>
        <field>Project_Site_Zipcode__c</field>
        <field>Submitted_for_Approval_By__c</field>
        <field>Date_Time_Submitted_for_Approval__c</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>kathryn.campbell@atirestoration.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>natalie.yrineo@atirestoration.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>tiffany.entsminger@atirestoration.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Step 1</label>
        <name>Step_1</name>
    </approvalStep>
    <description>This will approve ES jobs and mark the job to won automatically.</description>
    <emailTemplate>Opportunity_Email_Templates/Opportunity_Job_Approval_Required</emailTemplate>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>1 AND 2 AND 3 AND 4 AND 5</booleanFilter>
        <criteriaItems>
            <field>Opportunity.RecordType</field>
            <operation>equals</operation>
            <value>New Job (Not Approved)</value>
        </criteriaItems>
        <criteriaItems>
            <field>Opportunity.Office__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>Opportunity.Division__c</field>
            <operation>equals</operation>
            <value>Emergency Svces</value>
        </criteriaItems>
        <criteriaItems>
            <field>Opportunity.Project_Manager__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>Opportunity.Account_Status__c</field>
            <operation>notEqual</operation>
            <value>Rejected,Unapproved</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Alert_Admin_Managers_and_Job_Creator_of_Job_Approval_via_email</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Change_Record_Type_to_Job_Approved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Job_Approval_Date_Time</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Job_Approved_By</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>New_PD_Job_Assignment</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Stage_to_Won_for_ES</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Alert_Admin_Managers_and_Job_Creator_of_Job_Rejection_via_email</name>
            <type>Alert</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Job_Submittal_Date_Time</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Opportunity/Job Approval Process ES</label>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
