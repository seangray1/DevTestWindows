    <approvalPageFields>
        <field>Name</field>
        <field>CreatedBy</field>
        <field>Total_Revenue__c</field>
        <field>Total_Gross_Profit__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>Project_Director__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>Unanimous</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <formula>CreatedById   &lt;&gt;   Job__r.Project_Manager__r.Id</formula>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>PM Budget Approval</label>
        <name>PM_Budget_Approval</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>Regional_Manager__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Budget__c.Total_Revenue__c</field>
                <operation>greaterOrEqual</operation>
                <value>100000</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>ApproveRecord</ifCriteriaNotMet>
        <label>Reg Mgr Budget Approval</label>
        <name>Reg_Mgr_Budget_Approval</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>bucky.buchanan@atirestoration.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Budget__c.Total_Revenue__c</field>
                <operation>greaterOrEqual</operation>
                <value>250000</value>
            </criteriaItems>
        </entryCriteria>
        <label>Large Loss VP Budget Approval</label>
        <name>Large_Loss_VP_Budget_Approval</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <formula>Total_Revenue__c  &gt; 0 &amp;&amp; ISBLANK(Rejected_Reason__c)</formula>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Budget_Approved</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Budget_Approved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Budget_Status_to_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Budget_Rejected</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Update_Budget_Status_to_Rejected</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>true</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Budget_Approval_Request</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Update_Budget_Status_to_Submitted</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Budget Approval Process</label>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
