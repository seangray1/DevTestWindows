<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <submitter>All_Offices</submitter>
        <type>roleSubordinates</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>Account</field>
        <field>Contact_Ownership_Requester__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <label>Contact Ownership Request</label>
        <name>Contact_Ownership_Request</name>
    </approvalStep>
    <description>Approval process to allow for AE&#39;s to request ownership of unassigned contacts</description>
    <emailTemplate>Contact_Email_Templates/Contact_Ownership_Request_Submission</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Contact.Owner</field>
            <operation>notEqual</operation>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Ownership_Request_Approval</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Ownership_Request_Status_to_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Ownership_Request_Rejection_Email</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Ownership_Request_Status_to_Rejected</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Contact_Ownership_Requester</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Ownership_Request_Status_to_Unapproved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Ownership_Request_Submitter_Email</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Ownership_Requester_ID</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Contact Ownership Request Approval</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>
