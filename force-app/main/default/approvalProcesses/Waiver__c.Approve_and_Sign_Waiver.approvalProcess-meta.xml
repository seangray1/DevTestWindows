<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Waiver_Or_Letter_Type__c</field>
        <field>Customer__c</field>
        <field>Waiver_Owner__c</field>
        <field>Job__c</field>
        <field>Job_Location__c</field>
        <field>Invoice__c</field>
        <field>Through_Date__c</field>
        <field>Exception_Unaffected__c</field>
        <field>Exception_Extras_Disputed_Amount__c</field>
        <field>Received_Progress_Pymt_Amt__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>perficient@atirestoration.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>renee.ursenbach-huizar@atirestoration.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>steve.pace@atirestoration.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Review Waiver Data</label>
        <name>Review_Waiver_Data</name>
    </approvalStep>
    <description>Approval process to allow a collections supervisor to approve and sign a waiver for release to the customer. Intended for unconditional waivers.</description>
    <emailTemplate>Waiver_Templates/Waiver_Submitted</emailTemplate>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Waiver__c.Waiver_Or_Letter_Type__c</field>
            <operation>equals</operation>
            <value>Unconditional Progress Waiver,Unconditional Final Waiver</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Approver_Id</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Waiver_Approved_Notification</name>
            <type>Alert</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Waiver_Rejected_Notification</name>
            <type>Alert</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Date_Time_Submitted_for_Approval</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Approve and Sign Waiver</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>true</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>
